@model SistemasLegales.Models.Entidades.Accion

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Accion</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Detalle" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Detalle" class="form-control" />
                <span asp-validation-for="Detalle" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Fecha" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Fecha" class="form-control datepicker" />
                <span class="input-group-addon bg btndatepicker" data-picker="Fecha"><i class="fa fa-calendar"></i></span>
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
        </div>




        <div class="form-group">
            <label asp-for="IdRequisito" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="IdRequisito" class="form-control" asp-items="ViewBag.IdRequisito"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts{

    <script src="~/lib/jquery-spinner/js/jquery.spinner.js"></script>
    @{ await Html.RenderPartialAsync("_DatepickerPartial"); }
    }
